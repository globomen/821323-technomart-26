{
  "editorconfig": true,
  "end_with_newline": true,
  "indent_size": 2,
  "indent_char": " ",
  "html": {
    "content_unformatted": ["pre", "code"],
    "extra_liners": ["head", "body", "/html"],
    "indent_inner_html": true,
    "max_preserve_newlines": 0
  },
  "js": {
    "max_preserve_newlines": 2,
    "jslint_happy": true,
    "keep_array_indentation": true
  }
}
